
import json
from datetime import datetime
import boto3
from flask import Flask
import random

app = Flask(__name__)

greetings = [
    "Hello", "Hola", "Bonjour", "Ciao", "Hallo",
    "Olá", "Привет", "你好", "こんにちは", "안녕하세요"
]

visit_count = 0

@app.route("/")
def home():
    global visit_count
    visit_count += 1
    return f"{random.choice(greetings)}, user {visit_count}!"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
REGION = "eu-north-1"
BUCKET_NAME = "flask-visit-logs-2026"

s3 = boto3.client("s3", region_name=REGION)
def save_to_s3(data):
    key = f"logs/{datetime.utcnow().isoformat()}.json"
    s3.put_object(
        Bucket=BUCKET_NAME,
        Key=key,
        Body=json.dumps(data),
        ContentType="application/json"
    )
